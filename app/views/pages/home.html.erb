<div class="banner" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url('images/yacht-home.jpg');">
      <div class="banner-content">
        <h1>Waterbnb</h1>
        <p>Rent a Yacht</p>
        <div class="homebutton">
        <%= link_to "Rent a boat", boats_path, class: "btn btn-danger" %>

      <% if current_user.profile.nil? %>
        <%= render "shared/popupprofile" %>
        <!-- Button trigger modal -->
        <button type="button" class="btn btn-danger" data-toggle="modal" data-target="#exampleModal">
        Add a boat
        </button>

      <% else %>
        <%= link_to new_boat_path %>
      <% end %>

        </div>
      </div>
    </div>
