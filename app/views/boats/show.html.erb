<p id="notice"><%= notice %></p>

<p><strong>About this boat</strong></p>
  <ul>
  <strong><%= @boat.name %></strong>
  <li><%= @boat.boat_type %></li>
  <li><%= @boat.city %></li>
  <li><%= @boat.price %></li>
  <li><%= @boat.size %></li>
  </ul>
<% if current_user == @boat.user %>
  <p><%= link_to 'edit', edit_boat_path(@boat) %> | <%= link_to 'destroy', boat_path(@boat), method: :delete, data: {confirm: 'Are you sure?'} %></p>
<% end %>

