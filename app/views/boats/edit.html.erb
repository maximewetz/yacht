<%= content_for :title do  %>
Modify - <%= @boat.name  %>
<% end %>
<h1>Modify your boat</h1>

<%= simple_form_for @boat  do |f| %>
  <%= f.input :name %>
  <%= f.input :boat_type, collection: ["sailboat", "motorboat", "catamaran", "RIB", "jet ski", "house boat"] %>
  <%= f.input :city %>
  <%= f.input :price %>
  <%= f.input :size %>
   <%= f.input :photo %>
  <%= f.input :photo_cache, as: :hidden %>
  <%= f.submit "confirm modification", class: 'btn btn-primary' %>
<% end %>
