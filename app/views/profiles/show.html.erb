<%= content_for :title do  %>
WaterBNB - <%= @profile.first_name%> <%= @profile.last_name%>
<% end %>
<div class="container">
<div class="profile_style">
  <div class="profile_flex1">
    <h2>My Profile</h2>
  </div>
  <div class="profile_flex2"></div>
    <div class="card-user-infos">
      <h2 class="text-center"></h2>
      <div class="avatar-bordered">
        <%= cl_image_tag(@profile.photo, width: 150, height: 150, crop: :thumb, gravity: :face) %>
      </div>

      <h3><%= current_user.profile.first_name %></h3>
      <h3><%= current_user.profile.last_name %></h3>
      <h3><%= current_user.profile.phone_number %></h3>
    </div>
  </div>
  <div class="profile_flex3">
  <%= link_to 'edit profile', edit_user_profile_path(current_user), class: "btn btn-primary" %>
  </div>
</div>

</div>

<h2 class="text-center"></h2>
    <div class="row">
      <% current_user.boats.each do |b| %>
        <%= link_to boat_path(b) do %>
          <div class="col-xs-12 col-sm-4">
            <div class="card"
  style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)),
         url('<%= cl_image_path b.photo, height: 300, width: 400, crop: :fill %>')">
              <div class="card-category"><%= b.city %></div>
              <div class="card-description">
                <h2><%= b.name %></h2>
                <p><%= b.boat_type %></p>
              </div>

            </div>
          </div>
          <% end %>
        <% end %>
      </div>
    </div>





